{
    "manifest_version": 3,
    "name": "Phishing Guard",
    "version": "1.0.0",
    "description": "Modern phishing detection using machine learning",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }